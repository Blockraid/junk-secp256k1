{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext", "node"],  // Ensure that "dom" is not included
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src_ts"
  },
  "include": ["src_ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
